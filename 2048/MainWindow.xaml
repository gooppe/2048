<Window x:Class="_2048.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2048"
        mc:Ignorable="d"
        Title="2048" Height="700" Width="560" ResizeMode="NoResize" Background="#FFFAF8EF" KeyDown="Window_KeyDown">

    <Grid>
        <Border CornerRadius="5" Height="530" Width="530" Margin="0, 10, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#FFBBADA0">
            <Grid>
                <Grid x:Name="Playground"/>
            </Grid>
        </Border>
        <Label Content="Score:" FontFamily="Segoe UI Light" FontSize="24" HorizontalAlignment="Left" Height="81" Margin="12,560,0,0" VerticalAlignment="Top" Width="79" VerticalContentAlignment="Center"/>
        <Label x:Name="Score" Content="0" FontFamily="Segoe UI Light" FontSize="34" HorizontalAlignment="Left" Height="81" Margin="91,560,0,0" VerticalAlignment="Top" Width="303" VerticalContentAlignment="Center"/>
        <Button x:Name="Restart" Content="Restart" FontFamily="Segoe UI Light" FontSize="24" HorizontalAlignment="Left" Height="81" Margin="399,560,0,0" VerticalAlignment="Top" Width="133" Click="Restart_Click"/>
    </Grid>
</Window>
